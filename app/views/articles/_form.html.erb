<div>
  <div>
    <%= form_for(@article) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :text %>
      <%= f.text_field :text %>

      <%= select_tag(:category_id, options_for_select(@categories)) %>

      <%= f.file_field :picture %>

      <%= f.submit "Create Article" %>
    <% end %>
  </div>
</div>
